{
  "design_system": {
    "typography": {
      "font_family": {
        "heading": "Nunito, sans-serif",
        "body": "Manrope, sans-serif"
      },
      "scale": {
        "h1": "text-4xl md:text-5xl font-bold tracking-tight",
        "h2": "text-3xl md:text-4xl font-bold",
        "h3": "text-2xl font-semibold",
        "body": "text-base leading-relaxed",
        "small": "text-sm font-medium"
      }
    },
    "colors": {
      "palette": {
        "primary": {
          "DEFAULT": "#F59E0B",
          "foreground": "#FFFFFF",
          "hover": "#D97706"
        },
        "secondary": {
          "DEFAULT": "#FEF3C7",
          "foreground": "#451A03"
        },
        "background": "#FFFBEB",
        "foreground": "#451A03",
        "card": "#FFFFFF",
        "card_foreground": "#451A03",
        "muted": "#FDE68A",
        "muted_foreground": "#92400E",
        "border": "#FCD34D",
        "input": "#FDE68A",
        "ring": "#F59E0B"
      },
      "semantic": {
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6"
      }
    },
    "spacing": {
      "container_padding": "px-4 md:px-8 lg:px-12",
      "section_gap": "py-16 md:py-24",
      "element_gap": "gap-4 md:gap-6"
    },
    "visual_enhancers": {
      "radius": "rounded-xl",
      "shadows": {
        "card": "shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_8px_30px_rgb(0,0,0,0.08)] transition-shadow duration-300",
        "modal": "shadow-2xl"
      },
      "glassmorphism": "backdrop-blur-md bg-white/70 border border-white/20"
    }
  },
  "components": {
    "ProductCard": {
      "path": "/app/frontend/src/components/custom/ProductCard.js",
      "description": "Card with rounded corners, shadow, image, title, price, and 'Buy' button.",
      "props": ["image", "title", "price", "onOpenModal"],
      "styling": "bg-card rounded-xl overflow-hidden border border-amber-100 hover:border-amber-300 transition-all duration-300"
    },
    "ProductModal": {
      "path": "/app/frontend/src/components/custom/ProductModal.js",
      "description": "Dialog component showing large product image, weight selection, and price calculation.",
      "dependencies": ["@radix-ui/react-dialog"],
      "features": ["Weight selector (pills)", "Dynamic price update", "Add to Cart button"]
    },
    "CartDrawer": {
      "path": "/app/frontend/src/components/custom/CartDrawer.js",
      "description": "Side sheet (right) displaying cart items and checkout form.",
      "dependencies": ["@radix-ui/react-dialog", "Sheet component"],
      "features": ["List of items", "Total price", "Name/Phone inputs", "WhatsApp/Telegram buttons"]
    },
    "CategoryFilter": {
      "path": "/app/frontend/src/components/custom/CategoryFilter.js",
      "description": "Horizontal scrollable list of pill-shaped buttons for categories.",
      "styling": "flex gap-2 overflow-x-auto pb-4 scrollbar-hide"
    },
    "AdminDashboard": {
      "path": "/app/frontend/src/pages/AdminDashboard.js",
      "description": "Table view for managing products. Simple, clean, high contrast.",
      "features": ["Product list", "Add/Edit Modal", "Delete action"]
    }
  },
  "layout": {
    "grid_system": "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8",
    "container": "max-w-7xl mx-auto",
    "modal_layout": "grid grid-cols-1 md:grid-cols-2 gap-6"
  },
